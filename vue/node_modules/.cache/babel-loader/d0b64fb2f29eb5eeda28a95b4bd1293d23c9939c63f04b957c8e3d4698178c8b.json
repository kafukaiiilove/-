{"ast":null,"code":"export default {\n  data() {\n    let goodsId = this.$route.query.id;\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      goodsId: goodsId,\n      goodsData: {},\n      totalPrice: 0,\n      total: 0,\n      activeName: 'first',\n      commentData: [],\n      selectedData: [],\n      address: null,\n      addressData: [],\n      businessId: null\n    };\n  },\n  mounted() {\n    this.loadGoods();\n    this.loadComments();\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    loadGoods() {\n      this.$request.get('/goods/selectById?id=' + this.goodsId).then(res => {\n        if (res.code === '200') {\n          this.goodsData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    handleClick(tab, event) {\n      this.activeName = tab.name;\n    },\n    pay() {\n      if (this.user.address === null) {\n        this.$message.warning('请设置收货地址');\n        return;\n      }\n      let data = {\n        userId: this.user.id,\n        // 当前用户ID\n        addressId: this.user.address,\n        // 收货地址ID\n        status: '待发货',\n        // 订单状态\n        goodsId: this.goodsId,\n        // 商品ID\n        businessId: this.goodsData.businessId // 商家ID\n      };\n      console.log(\"Sending data to server:\", data);\n\n      // 这里是商品详情页下单的逻辑路径\n      this.$request.post('/orders/detailPay', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n          this.loadGoods(1);\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    collect() {\n      let data = {\n        userId: this.user.id,\n        businessId: this.goodsData.businessId,\n        goodsId: this.goodsId\n      };\n      this.$request.post('/collect/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('收藏成功');\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    addCart() {\n      let data = {\n        num: 1,\n        userId: this.user.id,\n        goodsId: this.goodsId,\n        businessId: this.goodsData.businessId\n      };\n      this.$request.post('/cart/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功');\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    loadComments() {\n      this.$request.get('/comment/selectByGoodsId?id=' + this.goodsId).then(res => {\n        if (res.code === '200') {\n          this.commentData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    navTo(url) {\n      location.href = url;\n    }\n  }\n};","map":{"version":3,"names":["data","goodsId","$route","query","id","user","JSON","parse","localStorage","getItem","goodsData","totalPrice","total","activeName","commentData","selectedData","address","addressData","businessId","mounted","loadGoods","loadComments","methods","$request","get","then","res","code","$message","error","msg","handleClick","tab","event","name","pay","warning","userId","addressId","status","console","log","post","success","collect","addCart","num","navTo","url","location","href"],"sources":["src/views/front/Detail.vue"],"sourcesContent":["<template>\n  <div class=\"main-content\">\n    <div style=\"width: 80%; background-color: white; min-height: 1000px; margin: 20px auto; margin-top: 60px; border-radius: 20px\">\n      <div style=\"padding: 15px 20px\">\n        <el-row :gutter=\"20\">\n          <el-col :span=\"12\">\n            <img :src=\"goodsData.img\" alt=\"\" style=\"width: 100%; height: 95%; border-radius: 20px\">\n          </el-col>\n          <el-col :span=\"12\">\n            <div style=\"font-size: 26px; font-weight: 900; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;\">{{goodsData.name}}</div>\n            <div style=\"color: #666666FF; margin-top: 5px;font-size: 20px; margin-top: 25px;\" >销量：{{goodsData.count}}</div>\n            <div style=\"color: red; margin-top: 15px;font-size: 20px; margin-top: 25px;\">抢购价：<span style=\"font-size: 20px\">{{goodsData.price}} / {{goodsData.unit}}</span></div>\n            <div style=\"margin-top: 20px\">\n              <img src=\"@/assets/imgs/456.png\" alt=\"\" style=\"width: 30%; height: 50%; border-radius: 15px\">\n            </div>\n            <div style=\"color: #666666FF; margin-top: 20px;font-size: 15px; margin-top: 25px;\">商家：<a href=\"#\" @click=\"navTo('/front/business?id=' + goodsData.businessId)\">{{goodsData.businessName}}</a></div>\n            <div style=\"color: #666666FF; margin-top: 20px;font-size: 15px; margin-top: 25px;\">分类：<a href=\"#\" @click=\"navTo('/front/type?id=' + goodsData.typeId)\">{{goodsData.typeName}}</a></div>\n            <div style=\"color: #666666FF; margin-top: 20px\">\n              <el-button type=\"warning\" @click=\"addCart\" style=\"font-size: 15px;\">加入购物车</el-button>\n              <el-button type=\"warning\" @click=\"collect\"style=\"font-size: 15px;\">收藏</el-button>\n              <el-button type=\"warning\" @click=\"pay\"style=\"font-size: 15px;\">立即购买</el-button>\n              <el-button type=\"warning\"  @click=\"navTo('/front/home')\"style=\"font-size: 15px;\">联系客服</el-button>\n            </div>\n          </el-col>\n        </el-row>\n      </div>\n      <div style=\"padding: 15px 20px\">\n        <el-tabs v-model=\"activeName\" @tab-click=\"handleClick\">\n          <el-tab-pane label=\"宝贝详情\" name=\"first\">\n            <div style=\"padding: 10px 175px\" v-html=\"goodsData.description\"></div>\n          </el-tab-pane>\n          <el-tab-pane label=\"宝贝评价\" name=\"second\">\n            <div style=\"margin-top: 10px\">\n              <div style=\"margin-top: 20px\" v-for=\"item in commentData\">\n                <div style=\"display: flex\">\n                  <div style=\"width: 40px\">\n                    <img :src=\"item.userAvatar\" alt=\"\" style=\"height: 40px; width: 40px; border-radius: 50%\">\n                  </div>\n                  <div style=\"width: 200px; margin-left: 10px\">\n                    <div style=\"font-weight: 700; font-size: 17px; color: #000000FF\">{{item.userName}}</div>\n                    <div style=\"color: #7A7A7AFF\">{{item.time}}</div>\n                  </div>\n                </div>\n                <div style=\"margin-top: 15px; font-size: 16px\">{{item.content}}</div>\n              </div>\n            </div>\n          </el-tab-pane>\n        </el-tabs>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\n\nexport default {\n\n  data() {\n    let goodsId = this.$route.query.id\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      goodsId: goodsId,\n      goodsData: {},\n      totalPrice: 0,\n      total: 0,\n      activeName: 'first',\n      commentData: [],\n      selectedData: [],\n      address: null,\n      addressData: [],\n      businessId:null\n    }\n  },\n  mounted() {\n    this.loadGoods()\n    this.loadComments()\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    loadGoods() {\n      this.$request.get('/goods/selectById?id=' + this.goodsId).then(res => {\n        if (res.code === '200') {\n          this.goodsData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    handleClick(tab, event) {\n      this.activeName = tab.name\n    },\n    pay() {\n  if (this.user.address === null) {\n    this.$message.warning('请设置收货地址');\n    return;\n  }\n  let data = {\n    userId: this.user.id,           // 当前用户ID\n    addressId: this.user.address,   // 收货地址ID\n    status: '待发货',                // 订单状态\n    goodsId: this.goodsId,          // 商品ID\n    businessId: this.goodsData.businessId // 商家ID\n  };\n\n  console.log(\"Sending data to server:\", data);\n\n  // 这里是商品详情页下单的逻辑路径\n  this.$request.post('/orders/detailPay', data).then(res => {\n    if (res.code === '200') {\n      this.$message.success('操作成功');\n      this.loadGoods(1);\n    } else {\n      this.$message.error(res.msg);\n    }\n  });\n   },\n    collect() {\n      let data = {\n        userId: this.user.id,\n        businessId: this.goodsData.businessId,\n        goodsId: this.goodsId\n      }\n      this.$request.post('/collect/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('收藏成功')\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    addCart() {\n      let data = {num: 1, userId: this.user.id, goodsId: this.goodsId, businessId: this.goodsData.businessId}\n      this.$request.post('/cart/add', data).then(res => {\n        if (res.code === '200') {\n          this.$message.success('操作成功')\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    loadComments() {\n      this.$request.get('/comment/selectByGoodsId?id=' + this.goodsId).then(res => {\n        if (res.code === '200') {\n          this.commentData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    navTo(url) {\n      location.href = url\n    }\n  }\n}\n</script>\n"],"mappings":"AAuDA;EAEAA,KAAA;IACA,IAAAC,OAAA,QAAAC,MAAA,CAAAC,KAAA,CAAAC,EAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAR,OAAA,EAAAA,OAAA;MACAS,SAAA;MACAC,UAAA;MACAC,KAAA;MACAC,UAAA;MACAC,WAAA;MACAC,YAAA;MACAC,OAAA;MACAC,WAAA;MACAC,UAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,SAAA;IACA,KAAAC,YAAA;EACA;EACA;EACAC,OAAA;IACAF,UAAA;MACA,KAAAG,QAAA,CAAAC,GAAA,gCAAAvB,OAAA,EAAAwB,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAjB,SAAA,GAAAgB,GAAA,CAAA1B,IAAA;QACA;UACA,KAAA4B,QAAA,CAAAC,KAAA,CAAAH,GAAA,CAAAI,GAAA;QACA;MACA;IACA;IACAC,YAAAC,GAAA,EAAAC,KAAA;MACA,KAAApB,UAAA,GAAAmB,GAAA,CAAAE,IAAA;IACA;IACAC,IAAA;MACA,SAAA9B,IAAA,CAAAW,OAAA;QACA,KAAAY,QAAA,CAAAQ,OAAA;QACA;MACA;MACA,IAAApC,IAAA;QACAqC,MAAA,OAAAhC,IAAA,CA