{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { MessageBox } from 'element-ui';\nexport default {\n  name: \"FrontLayout\",\n  data() {\n    return {\n      top: '',\n      notice: [],\n      user: JSON.parse(localStorage.getItem(\"xm-user\") || '{}'),\n      name: null,\n      cartNum: 0\n    };\n  },\n  mounted() {\n    this.loadNotice();\n  },\n  methods: {\n    // 模拟查询购物车数量的方法\n    fetchCartData() {\n      // 这里你可以调用 API 来获取购物车的数据\n      // 假设 API 返回购物车中的商品数量\n      this.cartNum = 5; // 示例，假设返回5个商品\n    },\n    // 跳转到购物车页面\n    goToCart() {\n      this.fetchCartData(); // 查询购物车数据\n      this.$router.push('/front/cart'); // 跳转到购物车页面\n    }\n  },\n  loadNotice() {\n    this.$request.get('/notice/selectAll').then(res => {\n      this.notice = res.data;\n      let i = 0;\n      if (this.notice && this.notice.length) {\n        this.top = this.notice[0].content;\n        setInterval(() => {\n          this.top = this.notice[i].content;\n          i++;\n          if (i === this.notice.length) {\n            i = 0;\n          }\n        }, 2500);\n      }\n    });\n  },\n  handleClick() {\n    // 判断用户是否已经登录（通过 localStorage 中的 xm-user 判断）\n    const user = localStorage.getItem(\"xm-user\");\n    if (user) {\n      // 如果已登录，跳转到 /front/home 页面\n      this.$router.push('/front/home');\n    } else {\n      // 如果未登录，跳转到登录页面\n      this.$router.push('/login');\n    }\n  },\n  updateUser() {\n    this.user = JSON.parse(localStorage.getItem('xm-user') || '{}'); // 重新获取下用户的最新信息\n  },\n  navTo(url) {\n    // 判断用户是否登录\n    const user = localStorage.getItem(\"xm-user\");\n\n    // 如果没有登录，跳转到登录页面\n    if (!user) {\n      this.$router.push('/login');\n    } else {\n      // 如果已登录，跳转到指定的 URL\n      location.href = url;\n    }\n  },\n  // 退出登录\n  logout() {\n    MessageBox.confirm('你确认要退出吗？', '确认退出', {\n      confirmButtonText: '确认',\n      cancelButtonText: '取消',\n      type: 'warning'\n    }).then(() => {\n      // 用户点击确认后，执行退出操作\n      localStorage.removeItem(\"xm-user\");\n      this.$router.push(\"/login\");\n    }).catch(() => {\n      // 用户点击取消时，什么都不做，返回\n      console.log('取消退出');\n    });\n  },\n  goToRegister() {\n    // 如果是注册链接，直接跳转到注册页面\n    this.$router.push('/register');\n  },\n  search() {\n    let name = this.name ? this.name : '';\n    location.href = '/front/search?name=' + name;\n  }\n};","map":{"version":3,"names":["MessageBox","name","data","top","notice","user","JSON","parse","localStorage","getItem","cartNum","mounted","loadNotice","methods","fetchCartData","goToCart","$router","push","$request","get","then","res","i","length","content","setInterval","handleClick","updateUser","navTo","url","location","href","logout","confirm","confirmButtonText","cancelButtonText","type","removeItem","catch","console","log","goToRegister","search"],"sources":["src/views/Front.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <!--头部-->\r\n    <div class=\"front-header\">\r\n      <div class=\"front-header-left\" @click=\"navTo('/front/home')\">\r\n        <img src=\"@/assets/imgs/logo.png\" alt=\"\">\r\n\r\n        <div class=\"title-container\" style=\"display: flex; align-items: center;\">\r\n  <!-- 购物商城使用title类的样式 -->\r\n  <div class=\"title\" style=\"margin-right: 20px;\">购物商城</div>\r\n\r\n  <!-- 亲，请登录使用普通的样式 -->\r\n     <el-text v-if=\"!user.username\" class=\"hover-text\" style=\"cursor: pointer; color: red;\" @click=\"handleClick\">亲，请登录</el-text>\r\n     <el-text v-if=\"!user.username\" class=\"hover-text\" style=\"cursor: pointer; margin-left: 10px;\" @click=\"goToRegister\">免费注册</el-text>\r\n\r\n</div>\r\n\r\n      \r\n      </div>\r\n      \r\n      <div class=\"front-header-center\" style=\"text-align: right; color:darkgray\">\r\n        <div user.username>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px; cursor: pointer;\" @click=\"handleClick\">首页 </el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"navTo('/front/orders')\">我的订单</el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"goToCart\">购物车\r\n          <span v-if=\"cartNum > 0\" style=\"margin-left: 5px; color: red;\">({{ cartNum }})</span>\r\n          </el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"navTo('/front/collect')\">收藏夹</el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"handleClick\">商家支持</el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"handleClick\">联系客服</el-text>\r\n          <el-text class=\"hover-text\" style=\"margin-right: 20px;\"   @click=\"handleClick\">帮助中心</el-text>\r\n        </div>\r\n        <div >\r\n          <el-dropdown v-if=\"user && user.username\">\r\n            <div class=\"front-header-dropdown\">\r\n              <img @click=\"navTo('/front/person')\" :src=\"user.avatar\" alt=\"\">\r\n              <div style=\"margin-left: 10px\">\r\n                <i class=\"el-icon-arrow-down\" style=\"margin-left: 5px\"></i>\r\n              </div>\r\n            </div>\r\n            <el-dropdown-menu slot=\"dropdown\">\r\n              <el-dropdown-item>\r\n                <div style=\"text-decoration: none\" @click=\"navTo('/front/cart')\">我的购物车</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div style=\"text-decoration: none\" @click=\"navTo('/front/collect')\">我的收藏</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div style=\"text-decoration: none\" @click=\"navTo('/front/address')\">我的地址</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div style=\"text-decoration: none\" @click=\"navTo('/front/orders')\">我的订单</div>\r\n              </el-dropdown-item>\r\n              <el-dropdown-item>\r\n                <div style=\"text-decoration: none\" @click=\"logout\">退出登录</div>\r\n              </el-dropdown-item>\r\n            </el-dropdown-menu>\r\n          </el-dropdown>\r\n        </div>\r\n      </div>\r\n    </div>\r\n    <!--主体-->\r\n    <div class=\"main-body\">\r\n      <router-view ref=\"child\" @update:user=\"updateUser\" />\r\n    </div>\r\n  </div>\r\n\r\n</template>\r\n\r\n<script>\r\n\r\nimport { MessageBox } from 'element-ui';\r\n\r\nexport default {\r\n  name: \"FrontLayout\",\r\n\r\n  data () {\r\n    return {\r\n      top: '',\r\n      notice: [],\r\n      user: JSON.parse(localStorage.getItem(\"xm-user\") || '{}'),\r\n      name: null,\r\n      cartNum: 0\r\n    }\r\n  },\r\n\r\n  mounted() {\r\n    this.loadNotice()\r\n  },\r\n\r\n  methods: {\r\n        // 模拟查询购物车数量的方法\r\n    fetchCartData() {\r\n      // 这里你可以调用 API 来获取购物车的数据\r\n      // 假设 API 返回购物车中的商品数量\r\n      this.cartNum = 5; // 示例，假设返回5个商品\r\n    },\r\n     // 跳转到购物车页面\r\n     goToCart() {\r\n      this.fetchCartData(); // 查询购物车数据\r\n      this.$router.push('/front/cart'); // 跳转到购物车页面\r\n    },\r\n  },\r\n    loadNotice() {\r\n      this.$request.get('/notice/selectAll').then(res => {\r\n        this.notice = res.data\r\n        let i = 0\r\n        if (this.notice && this.notice.length) {\r\n          this.top = this.notice[0].content\r\n          setInterval(() => {\r\n            this.top = this.notice[i].content\r\n            i++\r\n            if (i === this.notice.length) {\r\n              i = 0\r\n            }\r\n          }, 2500)\r\n        }\r\n      })\r\n    },\r\n    handleClick() {\r\n  // 判断用户是否已经登录（通过 localStorage 中的 xm-user 判断）\r\n  const user = localStorage.getItem(\"xm-user\");\r\n\r\n  if (user) {\r\n    // 如果已登录，跳转到 /front/home 页面\r\n    this.$router.push('/front/home');\r\n  } else {\r\n    // 如果未登录，跳转到登录页面\r\n    this.$router.push('/login');\r\n  }\r\n},\r\n\r\n    updateUser() {\r\n      this.user = JSON.parse(localStorage.getItem('xm-user') || '{}')   // 重新获取下用户的最新信息\r\n    },\r\n    navTo(url) {\r\n  // 判断用户是否登录\r\n  const user = localStorage.getItem(\"xm-user\");\r\n\r\n  // 如果没有登录，跳转到登录页面\r\n  if (!user) {\r\n    this.$router.push('/login');\r\n  } else {\r\n    // 如果已登录，跳转到指定的 URL\r\n    location.href = url;\r\n  }\r\n},\r\n    // 退出登录\r\n    logout() {\r\n      MessageBox.confirm('你确认要退出吗？', '确认退出', {\r\n        confirmButtonText: '确认',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        // 用户点击确认后，执行退出操作\r\n        localStorage.removeItem(\"xm-user\");\r\n        this.$router.push(\"/login\");\r\n      }).catch(() => {\r\n        // 用户点击取消时，什么都不做，返回\r\n        console.log('取消退出');\r\n      });\r\n    },\r\n    goToRegister() {\r\n    // 如果是注册链接，直接跳转到注册页面\r\n    this.$router.push('/register');\r\n  },\r\n    search() {\r\n      let name = this.name ? this.name : ''\r\n      location.href = '/front/search?name=' + name\r\n    }\r\n  }\r\n\r\n\r\n</script>\r\n\r\n<style scoped>\r\n  @import \"@/assets/css/front.css\";\r\n  .hover-text:hover {\r\n  color: red;\r\n}\r\n</style>"],"mappings":";AAuEA,SAAAA,UAAA;AAEA;EACAC,IAAA;EAEAC,KAAA;IACA;MACAC,GAAA;MACAC,MAAA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAR,IAAA;MACAS,OAAA;IACA;EACA;EAEAC,QAAA;IACA,KAAAC,UAAA;EACA;EAEAC,OAAA;IACA;IACAC,cAAA;MACA;MACA;MACA,KAAAJ,OAAA;IACA;IACA;IACAK,SAAA;MACA,KAAAD,aAAA;MACA,KAAAE,OAAA,CAAAC,IAAA;IACA;EACA;EACAL,WAAA;IACA,KAAAM,QAAA,CAAAC,GAAA,sBAAAC,IAAA,CAAAC,GAAA;MACA,KAAAjB,MAAA,GAAAiB,GAAA,CAAAnB,IAAA;MACA,IAAAoB,CAAA;MACA,SAAAlB,MAAA,SAAAA,MAAA,CAAAmB,MAAA;QACA,KAAApB,GAAA,QAAAC,MAAA,IAAAoB,OAAA;QACAC,WAAA;UACA,KAAAtB,GAAA,QAAAC,MAAA,CAAAkB,CAAA,EAAAE,OAAA;UACAF,CAAA;UACA,IAAAA,CAAA,UAAAlB,MAAA,CAAAmB,MAAA;YACAD,CAAA;UACA;QACA;MACA;IACA;EACA;EACAI,YAAA;IACA;IACA,MAAArB,IAAA,GAAAG,YAAA,CAAAC,OAAA;IAEA,IAAAJ,IAAA;MACA;MACA,KAAAW,OAAA,CAAAC,IAAA;IACA;MACA;MACA,KAAAD,OAAA,CAAAC,IAAA;IACA;EACA;EAEAU,WAAA;IACA,KAAAtB,IAAA,GAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;EACA;EACAmB,MAAAC,GAAA;IACA;IACA,MAAAxB,IAAA,GAAAG,YAAA,CAAAC,OAAA;;IAEA;IACA,KAAAJ,IAAA;MACA,KAAAW,OAAA