{"ast":null,"code":"export default {\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      typeData: [],\n      top: null,\n      notice: [],\n      goodsData: [],\n      recommendData: [],\n      name: null,\n      select: 0,\n      // 默认选择天猫\n      goodsData: {\n        businessId: 1,\n        // 假设是商家的ID\n        businessName: 'keyouhaosi' // 商家的名称\n      },\n      carousel_top: [require('@/assets/imgs/carousel-1.png'), require('@/assets/imgs/carousel-2.png'), require('@/assets/imgs/carousel-9.png')],\n      carousel_left: [require('@/assets/imgs/carousel-3.png'), require('@/assets/imgs/carousel-4.png'), require('@/assets/imgs/carousel-5.png')],\n      carousel_right: [require('@/assets/imgs/carousel-6.png'), require('@/assets/imgs/carousel-7.png'), require('@/assets/imgs/carousel-8.png')]\n    };\n  },\n  mounted() {\n    this.loadType();\n    this.loadNotice();\n    this.loadGoods();\n    this.loadRecommend();\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    handleSelectChange(value) {\n      if (value === 2) {\n        // 如果选择了\"店铺\"\n        this.searchBusiness();\n      }\n    },\n    // 搜索店铺的函数\n    searchBusiness() {\n      // 假设这里有一个API请求，查询business表\n      // 您可以根据实际情况调整请求逻辑\n      const businessName = this.goodsData.businessName;\n      console.log(\"正在搜索商铺: \", businessName);\n\n      // 这里是一个假设的API请求\n      // 比如调用某个方法来搜索数据库中的商家信息\n      this.$http.get('/api/business', {\n        params: {\n          name: businessName\n        }\n      }).then(response => {\n        // 处理返回的搜索结果\n        console.log(response.data);\n      }).catch(error => {\n        console.error(\"搜索失败：\", error);\n      });\n    },\n    // 导航到商家详情页面\n    loadRecommend() {\n      this.$request.get('/goods/recommend').then(res => {\n        if (res.code === '200') {\n          this.recommendData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    loadType() {\n      this.$request.get('/type/selectAll').then(res => {\n        if (res.code === '200') {\n          this.typeData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    loadNotice() {\n      this.$request.get('/notice/selectAll').then(res => {\n        this.notice = res.data;\n        let i = 0;\n        if (this.notice && this.notice.length) {\n          this.top = this.notice[0].content;\n          setInterval(() => {\n            this.top = this.notice[i].content;\n            i++;\n            if (i === this.notice.length) {\n              i = 0;\n            }\n          }, 2500);\n        }\n      });\n    },\n    loadGoods() {\n      this.$request.get('/goods/selectTop15').then(res => {\n        if (res.code === '200') {\n          this.goodsData = res.data;\n        } else {\n          this.$message.error(res.msg);\n        }\n      });\n    },\n    navTo(url) {\n      location.href = url;\n    },\n    search() {\n      let name = this.name ? this.name : '';\n      location.href = '/front/search?name=' + name;\n    }\n  }\n};","map":{"version":3,"names":["data","user","JSON","parse","localStorage","getItem","typeData","top","notice","goodsData","recommendData","name","select","businessId","businessName","carousel_top","require","carousel_left","carousel_right","mounted","loadType","loadNotice","loadGoods","loadRecommend","methods","handleSelectChange","value","searchBusiness","console","log","$http","get","params","then","response","catch","error","$request","res","code","$message","msg","i","length","content","setInterval","navTo","url","location","href","search"],"sources":["src/views/front/Home.vue"],"sourcesContent":["<template>\n  <div class=\"main-content\">\n    <div style=\"height: 60px; background-color: red\"></div>\n    <div style=\"display: flex; justify-content: center;\">\n      <div class=\"left\"></div>\n      <div style=\"width: 86%; background-color: white; margin-bottom: 50px\">\n\n        \n        <!-- 商品分类 -->\n        <div style=\"display: flex; align-items: center; margin-top: 5px;\">\n  <!-- 商品分类图片 -->\n  <div style=\"position: relative; marginwidth: 100px; height: 100px; overflow: hidden;\">\n    <a href=\"/front/home\">\n      <img src=\"http://how2j.cn/tmall/img/site/logo.gif\" style=\"width: 100%; height: 100%; object-fit: cover; border-radius: 50px;\">\n    </a>\n  </div>\n\n  <!-- 搜索框 -->\n  <div style=\"display: flex; align-items: center; height: 50px; margin-left: 20px; margin-right: 300px; border: 2px solid red; border-radius: 15px; padding: 5px;\">\n  <!-- 下拉菜单 -->\n  <div style=\"flex: 0.6; margin-left:0px;margin-right: 0px; display: flex; align-items: center;\">\n      <el-select\n        v-model=\"select\"\n        placeholder=\"天猫\"\n        style=\"width: 100%; background: transparent; border: none; font-size: 16px; color:black;\"\n        arrow-icon=\"el-icon-arrow-down\"\n        @change=\"handleSelectChange\" <!-- 监听选择变化 -->\n      >\n        <el-option label=\"天猫\" value=\"0\"></el-option>\n        <el-option label=\"宝贝\" value=\"1\"></el-option>\n        <el-option label=\"店铺\" value=\"2\"></el-option>\n      </el-select>\n    </div>\n\n            <!-- 输入框 -->\n            <input\n              type=\"text\"\n              v-model=\"name\"\n              placeholder=\"请输入宝贝名称\"\n              style=\"flex-grow: 1; padding: 0 10px; font-size: 16px; border: none; outline: none; background: none; color: #333;\">\n\n            <!-- 搜索按钮 -->\n            <el-button\n              type=\"danger\"\n              style=\"padding: 0 20px; height: 40px; font-size: 16px; border-radius: 10px;\"\n              @click=\"search\">\n              搜索\n            </el-button>\n\n          </div>\n\n\n</div>\n\n\n\n\n        <div style=\"display: flex; margin: 0 25px; height: 550px\">\n          <!-- 左侧分类内容 -->\n          <div style=\"flex: 2; border-radius: 10px; margin-top: 10px\">\n            <div style=\"display: flex; color: #666666FF; margin: 14px 0\" v-for=\"item in typeData\" :key=\"item.id\">\n              <img :src=\"item.img\" alt=\"\" style=\"height: 20px; width: 20px;margin-left: 20px;\">\n              <div style=\"margin-left: 10px; font-size: 14px\">\n                <a href=\"#\" @click=\"navTo('/front/type?id=' + item.id)\">{{ item.name }}</a>\n              </div>\n            </div>\n          </div>\n\n          <!-- 轮播图 -->\n          <div style=\"flex: 4; margin-top: 20px; border-radius: 10px\">\n            <div>\n              <el-carousel height=\"300px\" style=\"border-radius: 10px\">\n                <el-carousel-item v-for=\"item in carousel_top\" :key=\"item\">\n                  <img :src=\"item\" alt=\"\" style=\"width: 100%; height: 300px; border-radius: 10px\">\n                </el-carousel-item>\n              </el-carousel>\n            </div>\n\n            <!-- 侧边轮播图 -->\n            <div style=\"margin-top: 30px; display: flex\">\n              <div style=\"flex: 1\">\n                <el-carousel height=\"300px\" style=\"border-radius: 10px\">\n                  <el-carousel-item v-for=\"item in carousel_left\" :key=\"item\">\n                    <img :src=\"item\" alt=\"\" style=\"width: 100%; height: 200px; border-radius: 10px\">\n                  </el-carousel-item>\n                </el-carousel>\n              </div>\n              <div style=\"flex: 1; margin-left: 5px\">\n                <el-carousel height=\"300px\" style=\"border-radius: 10px\">\n                  <el-carousel-item v-for=\"item in carousel_right\" :key=\"item\">\n                    <img :src=\"item\" alt=\"\" style=\"width: 100%; height: 200px; border-radius: 10px\">\n                  </el-carousel-item>\n                </el-carousel>\n              </div>\n            </div>\n          </div>\n\n          <!-- 用户信息和推荐商品 -->\n          <div style=\"flex: 2; background-color: #F3F3F3FF; margin-top: 20px; margin-left: 20px; border-radius: 10px; \">\n            <div style=\"text-align: center; margin-top: 30px\">\n              <!-- 如果用户未登录，头像不可点击 -->\n              <img :src=\"user.username ? user.avatar : require('@/assets/imgs/456.png')\" alt=\"\" style=\"width: 80px; height: 80px; border-radius: 50%\"  \n              @click=\"user.username ? navTo('/front/person') : null\">\n               <!-- 公告 -->\n               <div style=\"margin-top: 10px\">\n  <span v-if=\"user.username\">Hi，{{ user.name }}</span>\n  <el-button \n    v-else\n    type=\"danger\" \n    style=\"padding: 0 20px; height: 40px; font-size: 16px; border-radius: 10px;\" \n    @click=\"navTo('/login')\">\n    立即登录\n  </el-button>\n</div>       \n            </div>\n            <div style=\"margin-top: 20px; padding: 0 15px\">\n              <img src=\"@/assets/imgs/123.jpg\" alt=\"\" style=\"height: 150px; width: 100%; border-radius: 20px\">\n            </div>\n            <div style=\"margin: 20px 10px 10px 10px; width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis\">\n              <i class=\"el-icon-bell\"></i>\n              <span style=\"font-weight: bold\">公告</span>\n              <span style=\"color: #666666;\">：{{ top }}</span>\n            </div>\n            <div style=\"display: flex; margin-top: 50px\">\n              <div style=\"flex: 1; text-align: center\">\n                <a href=\"#\" @click=\"navTo('/front/collect')\">\n                  <img src=\"@/assets/imgs/收藏.png\" alt=\"\" style=\"height: 25px; width: 25px\">\n                  <div>我的收藏</div>\n                </a>\n              </div>\n              <div style=\"flex: 1; text-align: center\">\n                <a href=\"#\" @click=\"navTo('/front/address')\">\n                  <img src=\"@/assets/imgs/店铺.png\" alt=\"\" style=\"height: 25px; width: 25px\">\n                  <div>我的地址</div>\n                </a>\n              </div>\n              <div style=\"flex: 1; text-align: center\">\n                <a href=\"#\" @click=\"navTo('/front/cart')\">\n                  <img src=\"@/assets/imgs/购物车.png\" alt=\"\" style=\"height: 25px; width: 25px\">\n                  <div>我的购物车</div>\n                </a>\n              </div>\n              <div style=\"flex: 1; text-align: center\">\n                <a href=\"#\" @click=\"navTo('/front/orders')\">\n                  <img src=\"@/assets/imgs/订单.png\" alt=\"\" style=\"height: 25px; width: 25px\">\n                  <div>我的订单</div>\n                </a>\n              </div>\n            </div>\n          </div>\n        </div>\n\n        <!-- 热卖商品 -->\n        <div style=\"margin: 40px 0 0 15px; height: 40px; background-color: #04BF04FF; font-size: 20px; color: white; width: 130px; font-weight: bold; line-height: 40px; text-align: center; border-radius: 20px\">热卖商品</div>\n        <div style=\"margin: 10px 5px 0 5px\">\n          <el-row>\n            <el-col :span=\"5\" v-for=\"item in goodsData\" :key=\"item.id\">\n              <img @click=\"navTo('/front/detail?id=' + item.id)\" :src=\"item.img\" alt=\"\" style=\"width: 100%; height: 175px; border-radius: 10px; border: #cccccc 1px solid\">\n              <div style=\"margin-top: 10px; font-weight: 500; font-size: 16px; width: 180px; color: #000000FF; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;\">{{ item.name }}</div>\n              <div style=\"margin-top: 5px; font-size: 20px; color: #FF5000FF\">￥ {{ item.price }} / {{ item.unit }}</div>\n            </el-col>\n          </el-row>\n        </div>\n\n        <!-- 猜你喜欢 -->\n        <div style=\"margin: 40px 0 0 15px; height: 40px; background-color: #04BF04FF; font-size: 20px; color: white; width: 130px; font-weight: bold; line-height: 40px; text-align: center; border-radius: 20px\">猜你喜欢</div>\n        <div style=\"margin: 10px 5px 0 5px\">\n          <el-row>\n            <el-col :span=\"5\" v-for=\"item in recommendData\" :key=\"item.id\">\n              <img @click=\"navTo('/front/detail?id=' + item.id)\" :src=\"item.img\" alt=\"\" style=\"width: 100%; height: 175px; border-radius: 10px; border: #cccccc 1px solid\">\n              <div style=\"margin-top: 10px; font-weight: 500; font-size: 16px; width: 180px; color: #000000FF; text-overflow: ellipsis; overflow: hidden; white-space: nowrap;\">{{ item.name }}</div>\n              <div style=\"margin-top: 5px; font-size: 20px; color: #FF5000FF\">￥ {{ item.price }} / {{ item.unit }}</div>\n            </el-col>\n          </el-row>\n        </div>\n      </div>\n      <div class=\"right\"></div>\n    </div>\n  </div>\n</template>\n\n<script>\n\nexport default {\n\n  data() {\n    return {\n      user: JSON.parse(localStorage.getItem('xm-user') || '{}'),\n      typeData: [],\n      top: null,\n      notice: [],\n      goodsData: [],\n      recommendData: [],\n      name:null,\n      select: 0,  // 默认选择天猫\n      goodsData: {\n        businessId: 1,  // 假设是商家的ID\n        businessName: 'keyouhaosi'  // 商家的名称\n      },\n      carousel_top: [\n        require('@/assets/imgs/carousel-1.png'),\n        require('@/assets/imgs/carousel-2.png'),\n        require('@/assets/imgs/carousel-9.png'),\n      ],\n      carousel_left: [\n        require('@/assets/imgs/carousel-3.png'),\n        require('@/assets/imgs/carousel-4.png'),\n        require('@/assets/imgs/carousel-5.png'),\n      ],\n      carousel_right: [\n        require('@/assets/imgs/carousel-6.png'),\n        require('@/assets/imgs/carousel-7.png'),\n        require('@/assets/imgs/carousel-8.png'),\n      ],\n    }\n  },\n  mounted() {\n    this.loadType()\n    this.loadNotice()\n    this.loadGoods()\n    this.loadRecommend()\n  },\n  // methods：本页面所有的点击事件或者其他函数定义区\n  methods: {\n    handleSelectChange(value) {\n      if (value === 2) {  // 如果选择了\"店铺\"\n        this.searchBusiness();\n      }\n    },\n    // 搜索店铺的函数\n    searchBusiness() {\n      // 假设这里有一个API请求，查询business表\n      // 您可以根据实际情况调整请求逻辑\n      const businessName = this.goodsData.businessName;\n      console.log(\"正在搜索商铺: \", businessName);\n\n      // 这里是一个假设的API请求\n      // 比如调用某个方法来搜索数据库中的商家信息\n      this.$http.get('/api/business', { params: { name: businessName } })\n        .then(response => {\n          // 处理返回的搜索结果\n          console.log(response.data);\n        })\n        .catch(error => {\n          console.error(\"搜索失败：\", error);\n        });\n    },\n    // 导航到商家详情页面\n    loadRecommend() {\n      this.$request.get('/goods/recommend').then(res => {\n        if (res.code === '200') {\n          this.recommendData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    loadType() {\n      this.$request.get('/type/selectAll').then(res => {\n        if (res.code === '200') {\n          this.typeData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    loadNotice() {\n      this.$request.get('/notice/selectAll').then(res => {\n        this.notice = res.data\n        let i = 0\n        if (this.notice && this.notice.length) {\n          this.top = this.notice[0].content\n          setInterval(() => {\n            this.top = this.notice[i].content\n            i++\n            if (i === this.notice.length) {\n              i = 0\n            }\n          }, 2500)\n        }\n      })\n    },\n    loadGoods() {\n      this.$request.get('/goods/selectTop15').then(res => {\n        if (res.code === '200') {\n          this.goodsData = res.data\n        } else {\n          this.$message.error(res.msg)\n        }\n      })\n    },\n    navTo(url) {\n      location.href = url\n    },\n    search() {\n      let name = this.name ? this.name : ''\n      location.href = '/front/search?name=' + name\n    }\n  }\n}\n</script>\n\n<style scoped>\n.main-content {\n  min-height: 100vh;\n  /*overflow: hidden;*/\n  background-size: 100%;\n  background-image: url('@/assets/imgs/img.png');\n}\n.left {\n  width: 7%;\n  background-repeat: no-repeat;\n  background-color: white;\n}\n.right {\n  width: 7%;\n  background-repeat: no-repeat;\n  background-color: white;\n}\n.el-col-5{\n  width: 20%;\n  max-width: 20%;\n  padding: 10px 10px;\n}\n.el-select {\n  width: 100%;\n}\n.input-with-select .el-input-group__prepend {\n    background-color: #fff;\n  }\n\n</style>"],"mappings":"AAuLA;EAEAA,KAAA;IACA;MACAC,IAAA,EAAAC,IAAA,CAAAC,KAAA,CAAAC,YAAA,CAAAC,OAAA;MACAC,QAAA;MACAC,GAAA;MACAC,MAAA;MACAC,SAAA;MACAC,aAAA;MACAC,IAAA;MACAC,MAAA;MAAA;MACAH,SAAA;QACAI,UAAA;QAAA;QACAC,YAAA;MACA;MACAC,YAAA,GACAC,OAAA,kCACAA,OAAA,kCACAA,OAAA,iCACA;MACAC,aAAA,GACAD,OAAA,kCACAA,OAAA,kCACAA,OAAA,iCACA;MACAE,cAAA,GACAF,OAAA,kCACAA,OAAA,kCACAA,OAAA;IAEA;EACA;EACAG,QAAA;IACA,KAAAC,QAAA;IACA,KAAAC,UAAA;IACA,KAAAC,SAAA;IACA,KAAAC,aAAA;EACA;EACA;EACAC,OAAA;IACAC,mBAAAC,KAAA;MACA,IAAAA,KAAA;QAAA;QACA,KAAAC,cAAA;MACA;IACA;IACA;IACAA,eAAA;MACA;MACA;MACA,MAAAb,YAAA,QAAAL,SAAA,CAAAK,YAAA;MACAc,OAAA,CAAAC,GAAA,aAAAf,YAAA;;MAEA;MACA;MACA,KAAAgB,KAAA,CAAAC,GAAA;QAAAC,MAAA;UAAArB,IAAA,EAAAG;QAAA;MAAA,GACAmB,IAAA,CAAAC,QAAA;QACA;QACAN,OAAA,CAAAC,GAAA,CAAAK,QAAA,CAAAlC,IAAA;MACA,GACAmC,KAAA,CAAAC,KAAA;QACAR,OAAA,CAAAQ,KAAA,UAAAA,KAAA;MACA;IACA;IACA;IACAb,cAAA;MACA,KAAAc,QAAA,CAAAN,GAAA,qBAAAE,IAAA,CAAAK,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAA7B,aAAA,GAAA4B,GAAA,CAAAtC,IAAA;QACA;UACA,KAAAwC,QAAA,CAAAJ,KAAA,CAAAE,GAAA,CAAAG,GAAA;QACA;MACA;IACA;IACArB,SAAA;MACA,KAAAiB,QAAA,CAAAN,GAAA,oBAAAE,IAAA,CAAAK,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAAjC,QAAA,GAAAgC,GAAA,CAAAtC,IAAA;QACA;UACA,KAAAwC,QAAA,CAAAJ,KAAA,CAAAE,GAAA,CAAAG,GAAA;QACA;MACA;IACA;IACApB,WAAA;MACA,KAAAgB,QAAA,CAAAN,GAAA,sBAAAE,IAAA,CAAAK,GAAA;QACA,KAAA9B,MAAA,GAAA8B,GAAA,CAAAtC,IAAA;QACA,IAAA0C,CAAA;QACA,SAAAlC,MAAA,SAAAA,MAAA,CAAAmC,MAAA;UACA,KAAApC,GAAA,QAAAC,MAAA,IAAAoC,OAAA;UACAC,WAAA;YACA,KAAAtC,GAAA,QAAAC,MAAA,CAAAkC,CAAA,EAAAE,OAAA;YACAF,CAAA;YACA,IAAAA,CAAA,UAAAlC,MAAA,CAAAmC,MAAA;cACAD,CAAA;YACA;UACA;QACA;MACA;IACA;IACApB,UAAA;MACA,KAAAe,QAAA,CAAAN,GAAA,uBAAAE,IAAA,CAAAK,GAAA;QACA,IAAAA,GAAA,CAAAC,IAAA;UACA,KAAA9B,SAAA,GAAA6B,GAAA,CAAAtC,IAAA;QACA;UACA,KAAAwC,QAAA,CAAAJ,KAAA,CAAAE,GAAA,CAA